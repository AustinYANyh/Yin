<Window x:Class="Yin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yin"
        mc:Ignorable="d"
        Title="Watermark Border Generator" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="设置" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Template Selection -->
                    <GroupBox Header="模板" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <ComboBox x:Name="CmbTemplates" SelectionChanged="CmbTemplates_SelectionChanged" Height="30"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- File Operations -->
                    <GroupBox Header="文件" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button x:Name="BtnOpen" Content="打开图片" Height="30" Click="BtnOpen_Click" Margin="0,0,0,10"/>
                            <TextBlock Text="或将图片拖入右侧区域" Foreground="Gray" TextWrapping="Wrap" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Parameters -->
                    <GroupBox Header="参数设置" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            
                            <!-- Image Scale -->
                            <TextBlock Text="图片缩放比例 (%)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderScale, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderScale" Minimum="50" Maximum="95" Value="85" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Margin -->
                            <TextBlock Text="最小垂直边距 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <TextBlock Text="最小水平边距 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderHMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderHMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Corner Radius -->
                            <TextBlock Text="圆角大小 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderCorner, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderCorner" Minimum="0" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Shadow Size -->
                            <TextBlock Text="阴影大小 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderShadow, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderShadow" Minimum="0" Maximum="100" Value="20" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                             <!-- Text Spacing (Tracking) -->
                            <TextBlock Text="文本字间距" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderTextSpacing, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderTextSpacing" Minimum="0" Maximum="50" Value="5" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Logo Vertical Offset -->
                            <TextBlock Text="Logo 垂直偏移" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderLogoOffsetY, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderLogoOffsetY" Minimum="-1000" Maximum="1000" Value="0" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Options -->
                            <CheckBox x:Name="ChkMarginPriority" Content="边距优先 (忽略缩放比例)" IsChecked="True" Margin="0,15,0,0"/>

                            <Button x:Name="BtnUpdate" Content="更新预览" Height="30" Margin="0,20,0,0" Click="BtnUpdate_Click"/>

                        </StackPanel>
                    </GroupBox>

                    <Button x:Name="BtnSave" Content="保存图片" Height="40" Background="#007ACC" Foreground="White" FontSize="14" FontWeight="Bold" Click="BtnSave_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Preview Area -->
        <Border Grid.Column="1" Background="#333" AllowDrop="True" Drop="Image_Drop" DragOver="Image_DragOver">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Image x:Name="ImgPreview" Margin="20" Stretch="Uniform"/>
                
                <TextBlock Grid.Row="1" x:Name="TxtStatus" Text="就绪" Foreground="White" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
