<Window x:Class="Yin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yin"
        mc:Ignorable="d"
        Title="Watermark Border Generator" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="设置" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Template Selection -->
                    <GroupBox Header="模板" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <ComboBox x:Name="CmbTemplates" SelectionChanged="CmbTemplates_SelectionChanged" Height="30"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- File Operations -->
                    <GroupBox Header="文件" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button x:Name="BtnOpen" Content="打开图片" Height="30" Click="BtnOpen_Click" Margin="0,0,0,10"/>
                            <TextBlock Text="或将图片拖入右侧区域" Foreground="Gray" TextWrapping="Wrap" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Parameters -->
                    <GroupBox Header="参数设置" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            
                            <!-- Image Scale -->
                            <TextBlock Text="图片缩放比例 (%)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderScale, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderScale" Minimum="50" Maximum="95" Value="85" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Margin -->
                            <TextBlock Text="边距设置" FontWeight="Bold" Margin="0,10,0,5"/>
                            
                            <!-- Top -->
                            <TextBlock Text="上边距 (px)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderTopMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderTopMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SliderTopMargin_ValueChanged"/>
                            </DockPanel>

                            <!-- Bottom -->
                            <TextBlock Text="下边距 (px)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderBottomMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderBottomMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SliderBottomMargin_ValueChanged"/>
                            </DockPanel>
                            <CheckBox x:Name="ChkSyncVertical" Content="同步上下边距" IsChecked="True" Margin="0,5,0,5" Checked="ChkSyncVertical_Checked"/>

                            <!-- Left -->
                            <TextBlock Text="左边距 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderLeftMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderLeftMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SliderLeftMargin_ValueChanged"/>
                            </DockPanel>

                            <!-- Right -->
                            <TextBlock Text="右边距 (px)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderRightMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderRightMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="SliderRightMargin_ValueChanged"/>
                            </DockPanel>
                            <CheckBox x:Name="ChkSyncHorizontal" Content="同步左右边距" IsChecked="True" Margin="0,5,0,5" Checked="ChkSyncHorizontal_Checked"/>

                            <!-- Corner Radius -->
                            <TextBlock Text="圆角大小 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderCorner, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderCorner" Minimum="0" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Shadow Size -->
                            <TextBlock Text="阴影大小 (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderShadow, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderShadow" Minimum="0" Maximum="100" Value="20" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                             <!-- Text Spacing (Tracking) -->
                            <TextBlock Text="文本字间距" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderTextSpacing, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderTextSpacing" Minimum="0" Maximum="50" Value="5" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Logo Vertical Offset -->
                            <TextBlock Text="Logo 垂直偏移" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderLogoOffsetY, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderLogoOffsetY" Minimum="-1000" Maximum="1000" Value="0" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Options -->
                            <CheckBox x:Name="ChkMarginPriority" Content="边距优先 (忽略缩放比例)" IsChecked="True" Margin="0,15,0,0"/>

                            <Button x:Name="BtnUpdate" Content="更新预览" Height="30" Margin="0,20,0,0" Click="BtnUpdate_Click"/>
                            
                            <!-- Custom Text -->
                            <Expander Header="自定义参数 / 缺省值" Margin="0,15,0,0" IsExpanded="False">
                                <StackPanel Margin="0,10,0,0">
                                    <TextBlock Text="相机品牌 (Make)" Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtMake" Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="相机型号 (Model)" Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtModel" Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="镜头型号 (Lens)" Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtLens" Margin="0,0,0,5"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="焦距 (Focal)" Margin="0,0,0,2"/>
                                            <TextBox x:Name="TxtFocal" Margin="0,0,0,5"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="光圈 (F-Num)" Margin="0,0,0,2"/>
                                            <TextBox x:Name="TxtFNumber" Margin="0,0,0,5"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="快门 (Shutter)" Margin="0,0,0,2"/>
                                            <TextBox x:Name="TxtShutter" Margin="0,0,0,5"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="ISO" Margin="0,0,0,2"/>
                                            <TextBox x:Name="TxtISO" Margin="0,0,0,5"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <TextBlock Text="说明：若无法读取EXIF，将使用上述值。" Foreground="Gray" FontSize="10" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Expander>

                        </StackPanel>
                    </GroupBox>

                    <Button x:Name="BtnSave" Content="保存图片" Height="40" Background="#007ACC" Foreground="White" FontSize="14" FontWeight="Bold" Click="BtnSave_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Preview Area -->
        <Border Grid.Column="1" Background="#333" AllowDrop="True" Drop="Image_Drop" DragOver="Image_DragOver">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Image x:Name="ImgPreview" Margin="20" Stretch="Uniform"/>
                
                <TextBlock Grid.Row="1" x:Name="TxtStatus" Text="就绪" Foreground="White" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
