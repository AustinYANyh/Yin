<Window x:Class="Yin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yin"
        mc:Ignorable="d"
        Title="Watermark Border Generator" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Template Selection -->
                    <GroupBox Header="Template" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <ComboBox x:Name="CmbTemplates" SelectionChanged="CmbTemplates_SelectionChanged" Height="30"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- File Operations -->
                    <GroupBox Header="File" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button x:Name="BtnOpen" Content="Open Image" Height="30" Click="BtnOpen_Click" Margin="0,0,0,10"/>
                            <TextBlock Text="Or drag and drop image to the right area" Foreground="Gray" TextWrapping="Wrap" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Parameters -->
                    <GroupBox Header="Parameters" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            
                            <!-- Image Scale -->
                            <TextBlock Text="Image Scale (%)" Margin="0,5,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderScale, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderScale" Minimum="50" Maximum="95" Value="85" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Margin -->
                            <TextBlock Text="Min Vertical Margin (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <TextBlock Text="Min Horizontal Margin (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderHMargin, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderHMargin" Minimum="0" Maximum="1000" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Corner Radius -->
                            <TextBlock Text="Corner Radius (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderCorner, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderCorner" Minimum="0" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Shadow Size -->
                            <TextBlock Text="Shadow Size (px)" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderShadow, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderShadow" Minimum="0" Maximum="100" Value="20" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                             <!-- Text Spacing (Tracking) -->
                            <TextBlock Text="Text Spacing" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderTextSpacing, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderTextSpacing" Minimum="0" Maximum="50" Value="5" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Logo Vertical Offset -->
                            <TextBlock Text="Logo Vertical Offset" Margin="0,10,0,0"/>
                            <DockPanel>
                                <TextBlock Text="{Binding ElementName=SliderLogoOffsetY, Path=Value, StringFormat=N0}" DockPanel.Dock="Right" Width="30" TextAlignment="Right"/>
                                <Slider x:Name="SliderLogoOffsetY" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            </DockPanel>

                            <!-- Options -->
                            <CheckBox x:Name="ChkMarginPriority" Content="Margin Priority (Ignore Scale)" IsChecked="True" Margin="0,15,0,0"/>

                            <Button x:Name="BtnUpdate" Content="Update Preview" Height="30" Margin="0,20,0,0" Click="BtnUpdate_Click"/>

                        </StackPanel>
                    </GroupBox>

                    <Button x:Name="BtnSave" Content="Save Image" Height="40" Background="#007ACC" Foreground="White" FontSize="14" FontWeight="Bold" Click="BtnSave_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Preview Area -->
        <Border Grid.Column="1" Background="#333" AllowDrop="True" Drop="Image_Drop" DragOver="Image_DragOver">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Image x:Name="ImgPreview" Margin="20" Stretch="Uniform"/>
                
                <TextBlock Grid.Row="1" x:Name="TxtStatus" Text="Ready" Foreground="White" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
